<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.content.ContentController">


    <!-- Top contains search bar, home button and login button-->
    <top>

        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-padding: 10" HBox.hgrow="ALWAYS">

            <Button fx:id="homeButton" mnemonicParsing="false" prefHeight="30.0" text="Home Page">
                <font>
                    <Font size="10.0" />
                </font>
            </Button>
   
            <TextField fx:id="searchBar" prefHeight="26.0" promptText="Search" HBox.hgrow="ALWAYS">
                <font>
                    <Font size="12.0" />
                </font>
            </TextField>
         <Button fx:id="logoutButton" mnemonicParsing="false" text="Log out" />
            <Button fx:id="profileButton" mnemonicParsing="false" text="Profile" />

        </HBox>

    </top>
   <center>
      <StackPane  maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
             <fx:include fx:id="homePage" source="/fxml/homepage/HomePage.fxml" />
             <fx:include fx:id="searchPage" source="/fxml/searchpage/SearchPage.fxml" />
             <fx:include fx:id="showOverview" source="/fxml/showoverview/ShowOverview.fxml" />
             <fx:include fx:id="profile" source="/fxml/userprofile/Profile.fxml" />


         </children>
      </StackPane>
   </center>



</BorderPane>
