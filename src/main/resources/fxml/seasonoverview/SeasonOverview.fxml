<BorderPane prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.seasonoverview.SeasonOverviewController">
   <padding>
         <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
      </padding>
      <center>
         <HBox alignment="CENTER" prefHeight="490.0" prefWidth="580.0" spacing="10.0" style="-fx-border-color: black;" BorderPane.alignment="CENTER">
            <children>
               <VBox alignment="CENTER_LEFT" prefHeight="340.0" prefWidth="157.0">
                  <children>
                     <Label prefHeight="19.0" prefWidth="150.0" text="Season Overview Screen">
                        <font>
                           <Font name="System Bold" size="15.0" />
                        </font>
                     </Label>
                  <Label text="Creators(s)" />
                  <ListView fx:id="creatorsList" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: grey;" stylesheets="@../showoverview/showOverviewLists.css" />
                  <Label text="Main Cast" />
                  <ListView fx:id="castList" layoutX="10.0" layoutY="195.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="200.0" prefWidth="200.0" style="-fx-border-color: black; -fx-background-color: grey;" stylesheets="@../showoverview/showOverviewLists.css" />
                  </children>
               </VBox>
               <VBox prefHeight="270.0" prefWidth="264.0">
                  <children>
                     <HBox alignment="BOTTOM_CENTER" prefHeight="73.0" prefWidth="322.0">
                        <children>
                           <Label alignment="BOTTOM_CENTER" prefHeight="19.0" prefWidth="93.0" text="Feature Review">
                              <font>
                                 <Font name="System Bold" size="10.0" />
                              </font>
                           </Label>
                        <Text fx:id="reviewRate" strokeType="OUTSIDE" strokeWidth="0.0" text="rate" />
                        <Text fx:id="featureUsername" strokeType="OUTSIDE" strokeWidth="0.0" text="username" />
                        <Text fx:id="featureDate" strokeType="OUTSIDE" strokeWidth="0.0" text="date" />
                        </children>
                     </HBox>
                  <TextArea fx:id="featureReview" prefHeight="184.0" prefWidth="299.0" style="-fx-border-color: black;" />
                  </children>
               </VBox>
               <VBox prefHeight="340.0" prefWidth="141.0">
                  <children>
                     <Label prefHeight="17.0" prefWidth="100.0" text="Your Season Rating">
                        <font>
                           <Font name="System Bold" size="10.0" />
                        </font>
                     </Label>
                  <Text fx:id="seasonRate" strokeType="OUTSIDE" strokeWidth="0.0" text="rate" />
                     <Label prefHeight="17.0" prefWidth="71.0" text="Your Review">
                        <font>
                           <Font name="System Bold" size="10.0" />
                        </font>
                     </Label>
                     <TextField fx:id="userReview" alignment="TOP_LEFT" prefHeight="194.0" prefWidth="152.0" promptText="Maximum 500 characters">
                        <font>
                           <Font size="10.0" />
                        </font>
                     </TextField>
                  </children>
               </VBox>
            </children>
            <padding>
               <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <BorderPane.margin>
               <Insets top="10.0" />
            </BorderPane.margin>
         </HBox>
      </center>


</BorderPane>
